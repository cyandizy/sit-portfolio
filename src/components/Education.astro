---
import "../styles/global.css";
import "../styles/education.css";
---

<section id="education" class="md:h-screen md:snap-center">
    <div
        class="absolute w-1/2 h-10 bg-gray-300 mt-14 md:mt-24 rounded-tr-4xl rounded-br-4xl"
        data-aos="fade-right"
        data-aos-duration="3000"
        data-aos-easing="ease-out"
    >
    </div>

    <h2
        class="relative pt-10 pl-7 md:pl-20 md:pt-20 prevent-select"
        data-aos="fade-up"
        data-aos-duration="3000"
        data-aos-easing="ease-out"
    >
        EDUCATION
    </h2>

    <div
        class="my-10 lg:mb-30 lg:mt-20 portrait:mt-10 flex flex-col gap-10 mx-2 md:flex-row justify-evenly md:p-14 flex-wrap"
    >
        <div class="animate-enlarge">
            <a
                href="https://example.com/"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div
                    class="school-card"
                    data-aos="fade-up"
                    data-aos-delay="100"
                    data-aos-duration="2000"
                >
                    <div class="h-1/2 w-1/2">
                        <img
                            class="object-contain max-w-full max-h-full"
                            src="./education/blue_black.png"
                        />
                    </div>
                    <div>
                        <p class="text-white font-mono">
                            Unnamed Primary School
                        </p>
                        <p class="text-white font-mono">Grade 1-6</p>
                        <p class="text-white font-mono">GPAX 3.92</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="animate-enlarge">
            <a
                href="https://example.com/"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div
                    class="school-card"
                    data-aos="fade-down"
                    data-aos-delay="300"
                    data-aos-duration="2000"
                >
                    <div class="h-1/2 w-1/2">
                        <img
                            class="object-contain max-w-full max-h-full"
                            src="./education/blue_black.png"
                        />
                    </div>
                    <div>
                        <p class="text-white font-mono">
                            Unnamed Middle School
                        </p>
                        <p class="text-white font-mono">Grade 7-9</p>
                        <p class="text-white font-mono">GPAX 3.87</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="animate-enlarge">
            <a
                href="https://example.com/"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div
                    class="school-card"
                    data-aos="fade-up"
                    data-aos-delay="500"
                    data-aos-duration="2000"
                >
                    <div class="h-1/2 w-1/2">
                        <img
                            class="object-contain max-w-full max-h-full"
                            src="./education/blue_black.png"
                        />
                    </div>
                    <div>
                        <p class="text-white font-mono">Unnamed High School</p>
                        <p class="text-white font-mono">Grade 10-12</p>
                        <p class="text-white font-mono">GPAX 3.97</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="animate-enlarge">
            <a
                href="https://example.com/"
                target="_blank"
                rel="noopener noreferrer"
            >
                <div
                    class="school-card"
                    data-aos="fade-down"
                    data-aos-delay="700"
                    data-aos-duration="2000"
                >
                    <div class="h-1/2 w-1/2">
                        <img
                            class="object-contain max-w-full max-h-full"
                            src="./education/blue_black.png"
                        />
                    </div>
                    <div>
                        <p class="text-white font-mono">Unnamed College</p>
                        <p class="text-white font-mono">
                            Diploma of Information and Technology
                        </p>
                        <p class="text-white font-mono">CWA 82.63</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>
