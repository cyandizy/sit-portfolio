---
import "../styles/global.css";
import "../styles/swiper.css";
import { Carousel } from "webcoreui/astro";

import Arino from "./projects/Arino.astro";
import Dsa from "./projects/DSA.astro";
import Firefly from "./projects/Firefly.astro";
import VisualLog from "./projects/VisualLog.astro";
import Fedora from "./projects/Fedora.astro";
import Isen from "./projects/ISEN.astro";
import FedoraServer from "./projects/FedoraServer.astro";
import SwipeText from "./SwipeText.astro";
---

<section
    id="projects"
    class="text-white mt-10 relative lg:h-screen md:snap-start md:portrait:h-screen flex flex-col"
>
    <button
        id="prev-project"
        class="top-1/2 left-7 z-10 absolute text-white bg-black md:portrait:bg-white md:portrait:text-black font-bold text-4xl hidden md:block cursor-pointer transition-opacity duration-75 !opacity-100"
        data-aos="zoom-out"
        data-aos-duration="2000"
        >&lt;
    </button>
    <button
        id="next-project"
        class="top-1/2 right-7 z-10 absolute text-white bg-black md:portrait:bg-white md:portrait:text-black font-bold text-4xl hidden md:block cursor-pointer transition-opacity duration-75 !opacity-100"
        data-aos="zoom-out"
        data-aos-duration="2000"
        >&gt;
    </button>
    <div
        class="flex flex-none items-center justify-center h-2/12 my-10 md:my-0 md:h-1/12 xl:h-2/12"
    >
        <h2 class="text-black text-center prevent-select">P R O J E C T S</h2>
    </div>

    <div
        id="project-container"
        class="card-container no-scrollbar"
        data-aos="fade-right"
        data-aos-duration="2000"
        data-aos-once="true"
    >
        <Arino />
        <Dsa />
        <Firefly />
        <VisualLog />
        <Fedora />
        <Isen />
        <FedoraServer />
    </div>
</section>
<SwipeText />

<script>
    import { swiper } from "../../public/scripts/swiper.js";

    // Get scrollable area
    const container = document.getElementById("project-container");
    // Get buttons
    const next = document.getElementById("next-project");
    const prev = document.getElementById("prev-project");

    swiper(container, next, prev, ".project-card");
</script>
